<h1>Actor <%= @an_actor.id%> details </h1>

<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @an_actor.name%> </dd>

  <dt>Dob</dt>
  <dd><%= @an_actor.dob%> </dd>

  <dt>Bio</dt>
  <dd><%= @an_actor.bio%> </dd>

  <dt>Image</dt>
  <dd><img src"<%= @an_actor.image%>" width="200"></dd>

  <dt>Created at</dt>
  <dd><%= @an_actor.created_at%> </dd>

  <dt>Updated at</dt>
  <dd><%= @an_actor.updated_at%> </dd>
</dl>

<h2>Filmography</h2>

<% matching_actors =  Movie.where( {:actor_id => @an_actor.id} )%>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

<%matching_actors.each do |an_actor|%>
  <tr>
    <td><%= an_actor.id%></td>
    <td><image src="<%= an_actor.image%>" width="200"></td>
      <td><%= an_actor.title%></td>
      <td><%= an_actor.year%></td>
      <td><%= @an_actor.name%></td>
      <td>
        <a href="/actors/<%= an_actor.id%>">
          Show details
        </a>
      </td>

    </tr>
  <%end%>

</table>
